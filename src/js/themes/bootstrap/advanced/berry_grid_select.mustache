<div class="row clearfix form-group {{modifiers}} {{#multiple.duplicate}}dupable" data-min="{{multiple.min}}" data-max="{{multiple.max}}{{/multiple.duplicate}}" name="{{name}}" data-type="{{type}}">
	{{>berry__label}}
	{{#multiple.duplicate}}
	<div class="duplicate add btn btn-default"><i class="fa fa-plus"></i></div>
	<div class="btn btn-default remove"><i class="fa fa-minus"></i></div>
	{{/multiple.duplicate}}
	{{#label}}
	{{#inline}}<div class="col-md-12">{{/inline}}
	{{^inline}}<div class="col-md-8">{{/inline}}
	{{/label}}
	{{^label}}
	<div class="col-md-12 ">
	{{/label}}
		{{#pre}}<div class="input-group"><span class="input-group-addon">{{{pre}}}</span>{{/pre}}
		{{^pre}}{{#post}}<div class="input-group">{{/post}}{{/pre}}
			<div name="{{name}}" style="max-height:400px;overflow-y:scroll;margin:0 -5px -10px;color:#fefefe" class="list">
			{{#options}}
				<div data-title="{{label}}" class="col-md-3 {{#selected}}{{select_class}}{{/selected}}" {{#value}}data-value="{{value}}"{{/value}}>
					<div style="border:solid 3px;height:85px;margin:5px -10px;padding:1px;border-radius:5px;text-align:center">
						{{#image}}<img src="{{root}}{{image}}" alt="{{label}}" class="img-rounded avatar hidden-phone" style="max-width:100%;max-height:100%">{{/image}}
					</div>
				</div>
			{{/options}}
			</div>
		{{#post}}<span class="input-group-addon">{{{post}}}</span></div>{{/post}}
		{{^post}}{{#pre}}</div>{{/pre}}{{/post}}
		{{>berry__addons}}
	</div>
</div>